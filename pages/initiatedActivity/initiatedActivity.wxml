<!--pages/initiatedActivity/initiatedActivity.wxml-->
<view wx:if="{{show_message}}"> 
  <text>{{message}}</text>
</view>
<scroll-view scroll-y 
    bindscrolltolower="bottomHandler" scrolltoupper="upperHandler" class="scrollPage">


  <view class='card-list'>
    <view bindtap="clickForActivityDetail" class="card-li bg-{{randomColorArr[key]}}" wx:for="{{activitylist}}" wx:key="key" wx:for-index="key" id="{{key}}">

      <view class="card-time" > {{item.day}}</view>
      
      <view class="padding-sm">
          <view class="flex  p-xs margin-bottom-sm mb-sm">
            <view class="flex-sub padding-sm margin-xs radius">
              <view class="card-title">{{item.name}}</view>
              
            </view>
            <view class="flex-twice padding-sm margin-xs radius">          
              
              
              <view class="card-location"><text class='cuIcon-location'></text>  {{item.location.name}}</view>
              <!--
              <view class="card-text"> {{item.description}}</view>
              -->
              < text wx:key="{{this}}" wx:for="{{item.currentParticipantNumber}}">
                <text class='cuIcon-peoplefill'></text>
              </text>
              < text wx:key="{{this}}" wx:for="{{item.maxParticipantNumber-item.currentParticipantNumber}}">
                <text class='cuIcon-people'></text>
              </text>
              
            </view>
          </view>
      </view>
      

    </view>
  </view>
  
  <view class='cu-tabbar-height'></view>
  
</scroll-view>
<movableView bind:pagerefresh="onRefreshClick"></movableView>


