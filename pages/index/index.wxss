/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.cu-bar {
	display: flex;
	position: relative;
	align-items: center;
	min-height: 100rpx;
	justify-content: space-between;
    width: 100%;
}

swiper{
  width: 100%;
  height: 400rpx;
}

.card-swiper {
	height: 300rpx !important;
}

.card-swiper swiper-item {
	width: 410rpx !important;
	left: 70rpx;
	box-sizing: border-box;
	padding: 40rpx 0rpx 70rpx;
	overflow: initial;
}

.card-li {
  padding: 15rpx;
  border-radius: 12rpx;
  width: 95%;
  height: 250rxp;
  margin: 0 2.5% 40rpx;
  position: relative;
  z-index: 1;
  background-image: url(https://image.weilanwl.com/color2.0/cardBg.png);
  background-size: cover;
  background-position: center;
}


.card-li.cur {
  color: #fff;
  background: rgb(94, 185, 94);
  box-shadow: 4rpx 4rpx 6rpx rgba(94, 185, 94, 0.4);
}

.card-title {
  font-size: 24rpx;
  font-weight: 300;
}

.card-title::first-letter {
  font-size: 30rpx;
  margin-right: 4rpx;
}

.card-title::before {
  content: "";
  position: absolute;
  display: block;
  width: 40rpx;
  height: 6rpx;
  background: #fff;
  bottom: 0;
  right: 0;
  opacity: 0.5;
}

.card-title::after {
  content: "";
  position: absolute;
  display: block;
  width: 100rpx;
  height: 1px;
  background: #fff;
  bottom: 0;
  right: 40rpx;
  opacity: 0.3;
}

.card-time {
  font-size: 28rpx;
  margin-top: 20rpx;
  position: relative;
  text-align:right;
}


.card-location {
  font-size: 24rpx;
  text-transform: Capitalize;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  position: relative;
}


.card-text {
  right: 15rpx;
  top: 15rpx;
  font-size: 14rpx;
  line-height: 15rpx;
  margin-top: 5rpx;
  position: relative;
}
