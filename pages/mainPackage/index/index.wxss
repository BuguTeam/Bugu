/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.cu-bar {
	display: flex;
	position: relative;
	align-items: center;
	min-height: 100rpx;
	justify-content: space-between;
    width: 100%;
}

swiper{
  width: 100%;
  height: 400rpx;
}

.card-swiper {
	height: 300rpx !important;
}

.card-swiper swiper-item {
	width: 410rpx !important;
	left: 70rpx;
	box-sizing: border-box;
	padding: 40rpx 0rpx 70rpx;
	overflow: initial;
}


.card-li {
  padding: 15rpx;
  border-radius: 12rpx;
  width: 95%;
  height: 250rxp;
  margin: 0 2.5% 40rpx;
  position: relative;
  z-index: 1;
  background-image: url(https://image.weilanwl.com/color2.0/cardBg.png);
  background-size: cover;
  background-position: center;
}


.card-title {
  font-size: 24rpx;
  font-weight: 300;
}

.card-title::first-letter {
  font-size: 30rpx;
  margin-right: 4rpx;
}


.card-location {
  margin-bottom: 20rpx;
}


