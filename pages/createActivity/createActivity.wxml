<!--pages/createActivity/createActivity.wxml-->
<map id="map" 
longitude="{{longitude}}" 
latitude="{{latitude}}" 
scale="14" 
controls="{{controls}}" 
bindcontroltap="controltap" 
markers="{{markers}}" 
bindmarkertap="markertap"
polyline="{{polyline}}" 
bindregionchange="regionchange" 
show-location style="width: 100%; height:490rpx;"></map>

<view class="solid-bottom colomn">
  <image src="./images/wave.gif" 
  mode="scaleToFill" class="gif-wave">
  </image>
</view>

<view class="padding solid-bottom colomn">
  <view class="row">
    <view class="cu-tag radius tag_look" bindtap="tapOnLocationTag" style="background-color:{{tagBackgroundColor}};color:white">位置</view>
    <view class="cu-form-group radius input_look">
      <view><input value="{{location}}" bindchange="locationInput"></input></view>
      <view class="searchSize"><picker range="{{locationList}}" class="cuIcon-locationfill text-orange" showvalue="title" bindchange="locationPicker">搜索</picker></view>
    </view>
  </view>
  <view class="row">
    <view class="cu-tag radius bg-cyan tag_look">名称</view>
    <view class="cu-form-group radius input_look">
      <input placeholder="活动名称" bindinput="nameInput"></input>
    </view>
  </view>
<view class="row">
<view class="cu-tag radius bg-cyan tag_look">开始时间        </view>
<view class="cu-form-group timePicker radius">
  <picker mode="date" value="{{date}}" start="2020-04-01" end="2030-08-20" bindchange="startDateChange">
    <view class="picker">
      {{startDate}}
    </view>
  </picker>
</view>
<view class="cu-form-group timePicker radius">
    <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="startTimeChange">
      <view class="picker">
        {{startTime}}
      </view>
    </picker>
</view>
</view>
<view class="row">
<view class="cu-tag radius bg-cyan tag_look">截止时间</view>
<view class="cu-form-group timePicker radius">
  <picker mode="date" value="{{date}}" start="2020-04-01" end="2030-08-20" bindchange="endDateChange">
    <view class="picker">
      {{endDate}}
    </view>
  </picker>
</view>
<view class="cu-form-group timePicker radius">
		<picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="endTimeChange">
			<view class="picker">
				{{endTime}}
			</view>
		</picker>
</view>
</view>
<view class="row">
  <view class="cu-tag radius bg-cyan tag_look">最大参与人数
  </view>
  <view class="cu-form-group radius input_look">
    <input placeholder="最大参与人数" bindinput="maxParticipantNumberInput"></input>
  </view>
</view>
  <view class="cu-form-group align-start radius description_container">
      <view class="title description">描述</view>
      <textarea maxlength="1000" disabled="{{modalName!=null}}" bindinput="descriptionInput"></textarea>
  </view>
</view>
<view class="solid-bottom colomn">
<image src="./images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
</view>


<view class="bg-white text-center button_container" >
  <button class=" cu-btn round bg-blue myButton"
  bindtap="clickButton" 
  >ok</button>
</view>

