.movable-area {
    pointer-events: none;
    z-index: 100;
    width:100%;
    height:100%;
    position:fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.movable-view {
    pointer-events: auto;
    height: 100rpx;
    width: 100rpx;
    background: transparent;
    padding: 4rpx;
    left: 84%;
    top: 84%;
}

.icon_bn {
    font-size: 100rpx;
    float: right;
    background: transparent;
    position: fixed;
    top: 20%;
    right: 10%;  
    width: 100%;
    height: 100%;
    border: 0 solid #ffffff;
    border-radius: 50%;
    box-shadow: 2px 2px 2px #cccccc;
}